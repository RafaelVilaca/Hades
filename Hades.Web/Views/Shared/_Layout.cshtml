<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <script src="~/Scripts/Common.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @RenderSection("scripts", required: false)
</head>
<body style="background-color: white; padding-top: 0px;">
    <nav style="height: 75px;">
        <div class="nav-wrapper accent-4" style="background-color: azure;">
            <img src="~/images/Bastet_CatScratch.png" style="margin-left: 20px; width: 75px;">
            <label id="LayoutNomeUsuarioLogado" style="text-align: center; font-size: 1rem; color: #b71c1c; position: relative; top: -29px;"></label>

            <a href="#" data-activates="mobile-demo" class="button-collapse">
                <i class="material-icons" style="font-size: 40px;color: crimson;border-radius: 40px;width: 5px;height: 55px;position: relative;top: 10px;">reorder</i>
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down" style="margin-top: 10px;">
                <li><a style="font-size: large; color: #8B0000" href="@Url.Action("Index", "Usuario")">Usuário</a></li>
                <li><a style="font-size: large; color: #8B0000" href="@Url.Action("Index", "Enquete")">Enquete</a></li>
                <li><a style="font-size: large; color: #8B0000" href="@Url.Action("Index", "Sorteio")">Sorteio</a></li>
                <li><a style="font-size: large; color: #8B0000" href="@Url.Action("Index", "Login")">Sair</a></li>
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li><a href="@Url.Action("Index", "Usuario")">Usuário</a></li>
                <li><a href="@Url.Action("Index", "Enquete")">Enquete</a></li>
                <li><a href="@Url.Action("Index", "Sorteio")">Sorteio</a></li>
                <li><a href="@Url.Action("Index", "Login")">Sair</a></li>
            </ul>
        </div>
    </nav>
    <div class="container" id="divContainerPrincipal">

        @*<div class="preloader-wrapper big active">
            <div class="spinner-layer spinner-blue-only">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div><div class="gap-patch">
                    <div class="circle"></div>
                </div><div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>*@

        @RenderBody()
        <footer>
            @*<p>&copy; @DateTime.Now.Year - HADES Application</p>*@
        </footer>
    </div>
</body>
</html>

<script>
    var nomeUsuario = sessionStorage.getItem('NomeUsuarioLogado');
    $(document).ready(function () {
        $(".button-collapse").sideNav();
        $("#LayoutNomeUsuarioLogado").text(nomeUsuario.toUpperCase());
    });
</script>