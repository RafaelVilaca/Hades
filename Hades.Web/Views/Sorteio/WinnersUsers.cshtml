@model IEnumerable<Hades.Web.ViewModels.SorteioParticipanteViewModel>

@{
    ViewBag.Title = "Winners";
    Layout = "~/Views/Shared/_LayoutSemNavBar.cshtml";
    var idSorteio = @Model.Select(x => x.Sorteio.Id).FirstOrDefault();
}
<div class="row" style="margin-top: 12px">
    <div class="col s12">
        <div class="row">
            <div>
                <h4>NOME SORTEIO</h4>
                <dl class="dl-horizontal">
                    <dt style="text-align: center;"> NOME: @Model.Select(x => x.Sorteio.Nome).FirstOrDefault() </dt>
                </dl>
            </div>
            <div>
                <h4>PARTICIPANTES</h4>
                <table class="striped">
                    <tr>
                        <th style="text-align: center;">NOME VENCEDOR</th>
                    </tr>
                    @if (Model != null)
                    {
                        foreach (var participante in Model)
                        {
                            <tr>
                                <td style="text-align: center;">@Html.DisplayFor(modelItem => participante.Nome_Participante)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="1" style="text-align: center;">Nenhum ganhador encontrado...</td></tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
