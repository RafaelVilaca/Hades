@using Hades.Web.ViewModels
@model IEnumerable<Hades.Domain.Entities.Sorteio>

@{
    ViewBag.Title = "Index";
    Layout = UsuarioLogadoViewModel.Administrador ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_LayoutUsuario.cshtml"; ;
    var mensagem = TempData["mensagem"]?.ToString() ?? "";
}
<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
    <div style="background-color: white; padding: 10px; border-radius: 15px; box-shadow: 0 0 30px black; margin-top: 2%;">
        <h4>Lista de Sorteios</h4>

        <div id="tabela">
            <ul>
                <li>
                    <p>
                        <a class="btn-floating red tooltipped" data-position="bottom" data-delay="50" data-tooltip="Criar Sorteio">
                            <i class="material-icons" id="Novo">playlist_add</i>
                        </a>
                    </p>
                </li>
            </ul>
            <div id="tabelaSorteios"></div>
        </div>
    </div>
</div>
<div id="divContentSorteio" class="modal modal-formatada"></div>

<script>

    $(".modal-overlay").on("click", function () {
        $(this).hide();
    });

    var mensagemAviso = '@(!string.IsNullOrEmpty(mensagem)?mensagem:"")';

    $(document).ready(function () {
        $('.modal').modal();
        $('.tooltipped').tooltip({ delay: 50 });
        $('input#input_text, textarea#textarea1').characterCounter();
        $('.datepicker').pickadate({
            selectMonths: true, // Creates a dropdown to control month
            selectYears: 15, // Creates a dropdown of 15 years to control year,
            today: 'Hoje',
            clear: 'Limpar',
            close: 'Ok',
            closeOnSelect: false // Close upon selecting a date,
        });
    });

    (function mensagem() {
        if (mensagemAviso != '') {
            Materialize.toast('' + msg + '', 4000, 'rounded red');
        }
    })();

    function erro(xhr) { Materialize.toast('' + xhr.responseText + '', 4000, 'rounded red'); }

    var urlsSorteio = {
        Edit: '@Url.Action("Edit", "Sorteio")',
        Details: '@Url.Action("Details", "Sorteio")',
        Delete: '@Url.Action("Delete", "Sorteio")',
        Drawlots: '@Url.Action("Drawlots", "Sorteio")',
        Create: '@Url.Action("Create", "Sorteio")',
        BuscaGrid: '@Url.Action("BuscaGridSorteios", "Sorteio")'
    }

    $("#Novo").click(function () {
        $.get(urlsSorteio.Create)
            .done(function (data) { $('#divContentSorteio').modal('open').html(data); })
            .fail(function (xhr) { Materialize.toast('' + xhr.responseText + '', 4000, 'rounded red') });
    });

    function escondeModal() {
        $("#divContentSorteio").modal('close');
    }

    var buscaTabelaSorteio = (function tabelaSorteio() {
        $.get(urlsSorteio.BuscaGrid)
            .done(function (data) {
                $("#tabelaSorteios").html(data);
            }).fail(function (xhr) { Materialize.toast('' + xhr.responseText + '', 4000, 'rounded red') });
        return tabelaSorteio;
    })();

    function editar(id) {
        $.post(urlsSorteio.Edit, {
            id: id
        }).done(function (data) {
            escondeModal();
            $('#divContentSorteio').modal('open').html(data);
        }).fail(function (xhr) { Materialize.toast('' + xhr.responseText + '', 4000, 'rounded red') });
    };

    function detalhar(id) {
        $.get(urlsSorteio.Details, {
            id: id
        }).done(function (data) {
            escondeModal();
            $('#divContentSorteio').modal('open').html(data);
        }).fail(function (xhr) { Materialize.toast('' + xhr.responseText + '', 4000, 'rounded red') });
    };

    function deletar(id) {
        if (!confirm("Deseja realmente Excluir esse sorteio?")) return;

        $.get(urlsSorteio.Delete, {
            id: id
        }).done(function () {
            buscaTabelaSorteio();
        }).fail(function (xhr) {
            Materialize.toast('' + xhr.responseText + '', 4000, 'rounded red');
        });
    };

    function sortear(id) {
        $.get(urlsSorteio.Drawlots, {
            id: id
        }).done(function (data) {
            escondeModal();
            $('#divContentSorteio').modal('open').html(data);
        }).fail(function (xhr) {
            Materialize.toast('' + xhr.responseText + '', 4000, 'rounded red');
        });
    };

</script>
