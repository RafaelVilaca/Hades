@model IEnumerable<Hades.Domain.Entities.Sorteio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Sorteios</h2>

<p>
    @Html.ActionLink("Nono Sorteio", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var sorteio in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => sorteio.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=sorteio.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=sorteio.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=sorteio.Id }, new { onclick = "javascript: return confirm('Deseja realmente Excluir esse sorteio?')" }) 
        </td>
    </tr>
}

</table>
