@model IEnumerable<Hades.Web.ViewModels.SorteioViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: white; padding: 10px; border-radius: 15px; box-shadow: 0 0 80px #f44336; margin-top: 2%;">
    <h3>Lista de Sorteios</h3>

    <div id="Acoes" style="border-style: inset; padding: 2%; font-size: x-large; display: none;"></div>

    <p>
        <ul>
            <li>
                <a class="btn-floating red"><i class="material-icons" onclick="criar()">playlist_add</i></a>
            </li>
        </ul>
    </p>

    <div id="divContentSorteio">
        
    </div>
</div>

<script>

    var urlsSorteio = {
        Edit: '@Url.Action("Edit", "Sorteio")',
        Details: '@Url.Action("Details", "Sorteio")',
        Delete: '@Url.Action("Delete", "Sorteio")',
        Drawlots: '@Url.Action("Drawlots", "Sorteio")',
        Create: '@Url.Action("Create", "Sorteio")',
        BuscaGrid: '@Url.Action("BuscaGridSorteios", "Sorteio")'
    }

    function criar() {
        $.post(urlsSorteio.Create)
            .done(function (data) {
                $("#divContentSorteio").slideUp(100, function () {
                    $("#divContentSorteio").html(data).slideDown(200);
                });
            }).fail(function (xhr) {
                $("#Acoes").show();
                $("#Acoes").html(xhr.responseText);
            });
    };

    function buscaTabelaSorteio() {
        $.get(urlsSorteio.BuscaGrid)
            .done(function (data) {
                $("#divContentSorteio").slideUp(100, function () {
                    $("#divContentSorteio").html(data).slideDown(200);
                });
            }).fail(function (xhr) {
                $("#Acoes").show();
                $("#Acoes").html(xhr.responseText);
            });
    };

    buscaTabelaSorteio();

    function editar(id) {
        $.post(urlsSorteio.Edit, {
            id: id
        }).done(function (data) {
            $("#divContentSorteio").fadeOut(100, function () {
                $("#divContentSorteio").html(data).fadeIn(100);
            });
        }).fail(function (xhr) {
            $("#Acoes").show();
            $("#Acoes").html(xhr.responseText);
        });
    };

    function detalhar(id) {
        $.get(urlsSorteio.Details, {
            id: id
        }).done(function (data) {
            $("#divContentSorteio").fadeOut(100, function() {
                $("#divContentSorteio").html(data).fadeIn(100);
            });
        }).fail(function (xhr) {
            $("#Acoes").show();
            $("#Acoes").html(xhr.responseText);
        });
    };

    function deletar(id) {
        if (!confirm("Deseja realmente Excluir esse sorteio?")) return;

        $.get(urlsSorteio.Delete, {
            id: id
        }).done(function () {
            buscaTabelaSorteio();
        }).fail(function (xhr) {
            $("#Acoes").show();
            $("#Acoes").html(xhr.responseText);
        });
    };

    function sortear(id) {
        $.get(urlsSorteio.Drawlots, {
            id: id
        }).done(function (data) {
            $("#Acoes").show();
            $("#Acoes").html(data.message);
            buscaTabelaSorteio();
        }).fail(function (xhr) {
            $("#Acoes").show();
            $("#Acoes").html(xhr.responseText);
        });
    };

</script>
