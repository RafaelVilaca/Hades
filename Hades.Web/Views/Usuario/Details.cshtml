@model Hades.Web.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Details";
    Layout = null;
}

<h2>Detalhes Usuario</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nome:</dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>Email:</dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>Data Cadastro:</dt>
        <dd>
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>

        <dt>Administrador:</dt>
        <dd>
            @Html.DisplayFor(model => model.Administrador)
        </dd>

        <dt>Ativo:</dt>
        @if (@Model.Ativo)
        {
            <dd>Sim</dd>
        }
        else
        {
            <dd>Não</dd>
        }
        @if (@Model.Administrador)
        {
            <dd>Sim</dd>
        }
        else
        {
            <dd>Não</dd>
        }
    </dl>
</div>
<p>
    <button value="Editar" class="btn btn-default" onclick="editar(model.Id)"></button>
    <button value="Cancelar" class="btn btn-default" onclick="cancelar()"></button>
</p>

<script>
    var urlsSorteio = {
        Edit: '@Url.Action("Edit", "Usuario")'
    }

    function editar(id) {
        $.post(urlsSorteio.Edit, {
            id: id
        }).done(function (data) {
            $("#divContentUsuario").fadeOut(100, function () {
                $("#divContentUsuario").html(data).fadeIn(100);
            });
        }).fail(function (xhr) {
            $("#Acoes").html(xhr.responseText);
        });
    };

    function cancelar() {
        buscaTabelaUsuario();
    }
</script>