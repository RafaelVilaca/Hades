<p>
    <button value="Editar" class="btn btn-default" onclick="editar(model.Id)"></button>
    <button value="Cancelar" class="btn btn-default" onclick="cancelar()"></button>
    @*@Html.ActionLink("Editar", "Edit", new {id = Model.Id}) |
    @Html.ActionLink("Voltar", "Index")*@
</p>

<script>
    var urlsSorteio = {
        Edit: '@Url.Action("Edit", "Usuario")'
    }

    function editar(id) {
        $.post(urlsSorteio.Edit, {
            id: id
        }).done(function (data) {
            $("#Acoes").html(data);
        }).fail(function (xhr) {
            $("#Acoes").html(xhr.responseText);
        });
    };

    function cancelar() {
        $("#Acoes").hide();
        $("#tabela").show();
    }
</script>