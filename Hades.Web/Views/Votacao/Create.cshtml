@model Hades.Web.ViewModels.VotacaoViewModel

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<h2>Votação</h2>

@using (Html.BeginForm("CreateConfirmed", "Votacao")) 
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div>Lista de Enquetes</div>
        <div class="col-lg-10 col-md-10">
            @Html.DropDownList("listaEnquetes", Model.ListaParaVotacao)
        </div>
    </div>

    <div class="form-horizontal">
        <h4>Votacao</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" style="color: black; font-weight: bold;">Justificativa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Justificativa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="color: black; font-weight: bold; ">Tipo Voto</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TipoVoto)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Votar" class="btn btn-default" style="border-radius: 20px;" />
            </div>
        </div>
    </div>
}